---
import type { Event } from "../data/data.type";
interface Props {
  event: Event;
}

const { event } = Astro.props;
---

<article
  class="flex flex-col bg-blue-50 border border-blue-500 dark:border-green-500 dark:bg-green-800 rounded-lg p-10 gap-6"
>
  <header class="flex flex-col gap-6">
    <div
      class="flex flex-wrap flex-row gap-4 text-light-background border-b border-gray-300 pb-10"
    >
      <span
        class="max-w-fit text-center w-full py-2 px-4 bg-red-500 rounded-full"
        >{event.type === "lecture" ? "Charla" : "Taller"}</span
      >
      {
        event.date && (
          <span class="max-w-fit text-center w-full py-2 px-4 bg-yellow-400 rounded-full text-dark-background">
            <i class="fa-regular fa-clock" /> {event.date}
          </span>
        )
      }

      {
        event.place && (
          <span class="max-w-fit text-center w-full py-2 px-4 bg-blue-600 dark:bg-green-400 rounded-full">
            {event.place}
          </span>
        )
      }
      {
        event.durationInMinutes && (
          <span class="max-w-fit text-center w-full py-2 px-4 bg-blue-600 dark:bg-green-400 rounded-full">
            {event.durationInMinutes} min.
          </span>
        )
      }
      {
        event.language && (
          <span class="max-w-fit text-center w-full py-2 px-4 bg-blue-600 dark:bg-green-400 rounded-full">
            {event.language}.
          </span>
        )
      }
    </div>
    <h3 class="text-2xl font-semibold">{event.name}</h3>
  </header>
  <div class="flex flex-col gap-4">
    {
      event.descriptionInParagraphs.map((descParagraph) => (
        <p>{descParagraph}</p>
      ))
    }
  </div>
</article>
