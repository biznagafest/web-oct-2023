---
import type { ScheduleEvent } from "../data/data.type";

interface Props {
  event: ScheduleEvent;
}

const { event } = Astro.props;
---

<div class="bg-yellow-100 dark:bg-yellow-700 rounded-2xl py-6 px-6 gap-10">
  <div class="flex gap-10">
    <div class="flex flex-col w-10 mt-1.5">
      <span class="text-sm text-blue-600 font-bold">{event.time_start}</span>
      <span class="text-sm text-blue-600 font-bold">{event.time_end}</span>
    </div>
    <div class="flex flex-col gap-3">
      <div class="flex flex-col">
        <h4 class="text-xl font-bold">{event.title}</h4>
        <h4 class="font-light">{event.subtitle}</h4>
      </div>
      <p class="mt-4 dark:text-white font-medium text-grey-50">
        {event.description}
      </p>
      <span class="block sm:hidden text-sm text-blue-600 font-bold"
        >Main track</span
      >
    </div>
  </div>
</div>
