---
import type { JobOffer } from "../data/data.type";

interface Props {
  jobOffer: JobOffer;
}

const { jobOffer } = Astro.props;
---

<div
  class="rounded-md w-full bg-blue-100 dark:bg-blue-800 px-4 py-4 shadow-md transition transform duration-500"
>
  <div class="flex flex-col justify-start">
    <div
      class="text-lg font-semibold text-bookmark-blue flex space-x-1 items-center mb-2"
    >
      <svg
        class="w-7 h-7 text-dark-background dark:text-light-background"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z"
        ></path>
        <path
          d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"
        ></path>
      </svg>
      <span>{jobOffer.jobTitle}</span>
    </div>
    <div class="text-sm text-gray-500 dark:text-gray-400 flex flex-col gap-2">
      {jobOffer.descriptionInParagrapgs.map((descPar) => <p>{descPar}</p>)}
    </div>
    <div>
      <div class="mt-5">
        <a
          href={jobOffer.url}
          class="mr-2 my-1 uppercase tracking-wider px-2 text-blue-700 border-blue-700 hover:bg-blue-600 hover:text-blue-100 dark:text-white dark:border-white border dark:hover:bg-white dark:hover:text-blue-800 transition transform duration-500 text-sm font-semibold rounded py-1 cursor-pointer"
          >Apply</a
        >
      </div>
    </div>
  </div>
</div>
